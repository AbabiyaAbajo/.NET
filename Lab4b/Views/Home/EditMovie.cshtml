@model Lab4b.Models.Movie
@{
    Layout = "_Layout";
}
<hr style="margin-bottom:5px !important; margin-top:80px !important; " />
<h1>Edit Movie</h1><br />
<form asp-controller="Home" asp-action="ModifyMovie">
    <input type="hidden" value="@Model.MovieId" name="MovieId" />
    <div class="form-group">
        <label for="Title">Title</label>
        <input class="form-control" type="text" data-val="true" asp-for="Title" />
    </div>
    <div class="form-group">
        <label for="SubTitle">SubTitle</label>
        <input class="form-control" type="text" data-val="true" asp-for="SubTitle" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" rows="10" data-val="true" asp-for="Description">
        </textarea>
    </div>
    <div class="form-group">
        <label for="Year">Year</label>
        <input class="form-control" type="date" data-val="true" asp-for="Year" />
    </div>
    <div class="form-group">
        <label for="Rating">Rating</label>
        <input class="form-control" type="number" data-val="true" asp-for="Rating" />
    </div>
    <br />
    <input type="submit" value="Edit Movie" class="btn btn-default" />

</form>
