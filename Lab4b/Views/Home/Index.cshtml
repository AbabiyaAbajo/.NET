@model IEnumerable<Lab4b.Models.Movie>
@{
    Layout = "_Layout";
}

<body>
    <hr style="margin-bottom:5px !important; margin-top:80px !important; " />
    <h1>Current Movies</h1>
    <br />
    <div class="table-responsive">
        <table class="table table-hover table-striped thead-light" style="width: 100%;">
            
            @if (Model == null || Model.Count() == 0)
            {
                <tr>
                    <td>
                        There are no movies in your database.
                    </td>
                </tr>
            }
            else
            {

                <thead class="thead-light">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">
                            Movie Title
                        </th>
                        <th scope="col">
                            Movie SubTitle
                        </th>
                        <th scope="col">
                            Description
                        </th>
                        <th scope="col">
                            Year
                        </th>
                        <th scope="col">
                            Rating
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <a class="btn btn-xs btn-primary" asp-controller="Home" asp-action="EditMovie" asp-route-id="@item.MovieId">Edit</a>&nbsp;&nbsp;
                        </td>
                        <td>@item.Title</td>
                        <td>@item.SubTitle</td>
                        <td>@item.Description</td>
                        <td>@item.Year</td>
                        <td>@item.Rating</td>
                        <td>
                            <a class="btn btn-xs btn-danger" asp-controller="Home" asp-action="DeleteMovie" onclick="return confirm('Are you sure?');" asp-route-id="@item.MovieId">Delete</a> &nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                    </tr>

                }
            }
            </table>
    </div>
    <br />
    <br />
    <hr />

</body>