@model IEnumerable<Lab6.Models.Tweet>

@{
    Layout = "_Layout";
}

<h3>Post a comment!</h3>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="PostTweet">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label">User name</label>
                <input name="username" class="form-control" />
            </div>
            <div class="form-group">
                <label  class="control-label">Content</label>
                <textarea name="Content" class="form-control z-depth-1" rows="4" placeholder="Write something here..."> </textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Tweet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model == null || Model.Count() == 0)
{
    <p>There are no tweets to display.</p>
}
else
{
    @foreach (var item in Model)
    {
        <div class="card col-12">
            <div class="card-header col-12">
                TweetId: @item.TweetId
            </div>
            <div class="card-body">
                <blockquote class="blockquote mb-0">
                    <p>
                        Content: @item.Content
                    </p>
                    <footer class="blockquote-footer">
                        Someone famous named: <cite title="Source Title">@item.Username</cite>
                    </footer>
                </blockquote>
            </div>
        </div>
        <br />
    }
}
