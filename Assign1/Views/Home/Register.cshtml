@model WebApplication1.Models.Users

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register</h1>

<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (ViewBag.Message != null)
            {
                <div class="form-group" style="font-style:italic">
                    <div class="text-lg-center text-primary">@ViewBag.Message</div>
                </div>
            }
        <div class="form-group">
            <!-- Material inline 1 -->
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" asp-for="RoleId" value="1" asp-items="ViewBag.RoleId">
                <label class="form-check-label" asp-for="RoleId">General User</label>
            </div>

            <!-- Material inline 2 -->
            <div class="form-check form-check-inline">
                <input type="radio" class="form-check-input" asp-for="RoleId" value="3" asp-items="ViewBag.RoleId">
                <label class="form-check-label" asp-for="RoleId">Admin</label>
            </div>

            @*<span style="vertical-align:top">
            <input type="radio" asp-for="RoleId" class="form-control" value="1" asp-items="ViewBag.RoleId">
            <label>General User</label>
        </span>
        <span style="vertical-align:top">
            <input type="radio" asp-for="RoleId" class="form-control" value="3" asp-items="ViewBag.RoleId">
            <label>Admin</label>
        </span>*@
        </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

